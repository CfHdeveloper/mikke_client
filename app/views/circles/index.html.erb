<!DOCTYPE html>
<html>
  <head>
    <title>App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <p>circles</p>
    <ul>
      <h2><%= @details['name'] %></h2>
      <p><%= @details['profile'] %></p>
      <p><%= @details['description'] %></p>
      <p>members : <%= @details['members'] %></p>
      <ul>
        <li>https://www.facebook.com/<%= @details['link']['facebook'] %></li>
        <li>https://twitter.com/<%= @details['link']['twitter'] %></li>
        <li>https://www.instagram.com/<%= @details['link']['instagram'] %></li>
        <li><%= @details['link']['homepage'] %></li>
      </ul>
      <p>founded on <%= @details['founded'] %></p>
    </ul>
  </body>
</html>
